<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <%= render "layouts/rails_admin/head" %>
  </head>
  <body class="rails_admin">
    <div data-i18n-options="<%= I18n.t("admin.js").to_json %>" id="admin-js"></div>
    <nav class="navbar navbar-expand-md fixed-top navbar-dark bg-primary border-bottom">
      <%= render "layouts/rails_admin/navigation" %>
    </nav>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-3 col-md-2 col-lg-1 flex-wrap p-0">
          <%= render "layouts/rails_admin/sidebar_navigation" %>
        </div>
        <div class="col-sm-9 col-sm-offset-2 col-md-10 col-lg-11 col-md-offset-2">
          <div class="container-fluid">
            <%= render template: 'layouts/rails_admin/content' %>
          </div>
        </div>
      </div>
    </div>
<script>
    var waitForJQuery = setInterval(function () {
      if (typeof $ != 'undefined') {
        // $('[data-toggle="tooltip"]').tooltip({'delay': { show: 500, hide: 5000 }});
        $('[data-toggle="tooltip"]').tooltip();
        clearInterval(waitForJQuery);
      }
    }, 10);
</script>
  </body>
</html>
